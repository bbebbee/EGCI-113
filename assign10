#include <stdio.h>
#include <string.h>
#include <ctype.h>
#define Size 3

int main()
{
    char s1[Size][30];
    int i;
    for(i=0;i<Size;i++){
        printf("Input string %d:",i);
    fgets(s1[i],30,stdin);
    s1[i][strlen(s1[i])-1]='\0';
    }
    
    char first[30],last[30];
    
    strcpy(first,s1[0]);
    for(i=1;i<Size;i++){
        if(strcmp(first,s1[i])>0)
            strcpy(first,s1[i]);
        printf("%s\n",first);   
    }

    strcpy(last,s1[0]);
    for(i=1;i<Size;i++){
        if(strcmp(last,s1[i])<0) //<,> for first and last
            strcpy(last,s1[i]);
        printf("%s\n",last);   
    }
    
    strcat(first,last);
    printf("%s\n",first);
    
    for(i=strlen(first)-1;i>=0;i--){
        switch(first[i]){
            case 'a':
            case 'e':
            case 'i':
            case 'o':
            case 'u':printf("%c",toupper(first[i]));
                break;
            default: printf("%c",first[i]);
    }
    }
    return 0;
}

